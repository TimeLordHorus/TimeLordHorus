<Application
    x:Class="TimeLordDashboard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:TimeLordDashboard.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>

            <!-- Color Palette for Fluent Design -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4" />
            <SolidColorBrush x:Key="SecondaryBrush" Color="#005A9E" />
            <SolidColorBrush x:Key="AccentBrush" Color="#00B7C3" />
            <SolidColorBrush x:Key="SuccessBrush" Color="#107C10" />
            <SolidColorBrush x:Key="WarningBrush" Color="#FCE100" />
            <SolidColorBrush x:Key="ErrorBrush" Color="#E81123" />

            <!-- Spacing and Sizing -->
            <x:Double x:Key="SmallSpacing">8</x:Double>
            <x:Double x:Key="MediumSpacing">16</x:Double>
            <x:Double x:Key="LargeSpacing">24</x:Double>
            <x:Double x:Key="ExtraLargeSpacing">32</x:Double>

            <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
            <CornerRadius x:Key="CardCornerRadius">12</CornerRadius>
        </ResourceDictionary>
    </Application.Resources>
</Application>
