<Application
    x:Class="TimeLordDashboard.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:helpers="using:TimeLordDashboard.Helpers">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="Themes/CybersteamTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Converters -->
            <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <helpers:FileSizeConverter x:Key="FileSizeConverter"/>
            <helpers:RelativeDateTimeConverter x:Key="RelativeDateTimeConverter"/>
            <helpers:FriendlyDateTimeConverter x:Key="FriendlyDateTimeConverter"/>
            <helpers:TaskStatusToBoolConverter x:Key="TaskStatusToBoolConverter"/>
            <helpers:PriorityToColorConverter x:Key="PriorityToColorConverter"/>

            <!-- Color Palette - Cybersteam Theme -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#00F0FF" /> <!-- Neon Cyan -->
            <SolidColorBrush x:Key="SecondaryBrush" Color="#FF00FF" /> <!-- Neon Magenta -->
            <SolidColorBrush x:Key="AccentBrush" Color="#9D00FF" /> <!-- Neon Purple -->
            <SolidColorBrush x:Key="SuccessBrush" Color="#00FF41" /> <!-- Neon Green -->
            <SolidColorBrush x:Key="WarningBrush" Color="#FFE600" /> <!-- Neon Yellow -->
            <SolidColorBrush x:Key="ErrorBrush" Color="#FF0040" /> <!-- Plasma Red -->

            <!-- Spacing and Sizing -->
            <x:Double x:Key="SmallSpacing">8</x:Double>
            <x:Double x:Key="MediumSpacing">16</x:Double>
            <x:Double x:Key="LargeSpacing">24</x:Double>
            <x:Double x:Key="ExtraLargeSpacing">32</x:Double>

            <CornerRadius x:Key="ControlCornerRadius">0</CornerRadius> <!-- Sharp edges for cyber aesthetic -->
            <CornerRadius x:Key="CardCornerRadius">0</CornerRadius> <!-- Sharp edges for cyber aesthetic -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
