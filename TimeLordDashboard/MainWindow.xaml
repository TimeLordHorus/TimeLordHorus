<Window
    x:Class="TimeLordDashboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    Title="TimeLord Dashboard - Your Personal Wellbeing &amp; Productivity Hub">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Grid Grid.Row="0" Background="{ThemeResource LayerFillColorDefaultBrush}"
              Padding="16,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <FontIcon Glyph="&#xE943;" FontSize="20" Foreground="{StaticResource PrimaryBrush}"/>
                <TextBlock Text="TimeLord Dashboard"
                          FontSize="16"
                          FontWeight="SemiBold"
                          VerticalAlignment="Center"/>
            </StackPanel>

            <CommandBar Grid.Column="2"
                       Background="Transparent"
                       DefaultLabelPosition="Right"
                       IsOpen="False">
                <AppBarButton Icon="Setting" Label="Settings" Click="SettingsButton_Click"/>
                <AppBarButton Icon="Refresh" Label="Refresh" Click="RefreshButton_Click"/>
            </CommandBar>
        </Grid>

        <!-- Main Content Area -->
        <NavigationView Grid.Row="1"
                       x:Name="NavView"
                       IsBackButtonVisible="Collapsed"
                       IsSettingsVisible="False"
                       PaneDisplayMode="Left"
                       SelectionChanged="NavView_SelectionChanged">

            <NavigationView.MenuItems>
                <NavigationViewItem Icon="Home" Content="Dashboard" Tag="Dashboard"/>
                <NavigationViewItem Content="File Management" Tag="FileManagement">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE8B7;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Wellbeing" Tag="Wellbeing">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE95E;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem Content="Analytics" Tag="Analytics">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xE9D9;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:Name="ContentFrame" />
        </NavigationView>
    </Grid>
</Window>
