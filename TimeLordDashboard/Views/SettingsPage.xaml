<Page
    x:Class="TimeLordDashboard.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24" MaxWidth="800">
            <!-- Page Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Settings"
                          FontSize="32"
                          FontWeight="SemiBold"/>
                <TextBlock Text="Customize your TimeLord Dashboard experience"
                          FontSize="14"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Appearance Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Appearance"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="Theme"
                                     FontSize="14"
                                     FontWeight="SemiBold"/>
                            <ComboBox Header="App theme"
                                    SelectedIndex="2"
                                    MinWidth="200">
                                <ComboBoxItem Content="Light"/>
                                <ComboBoxItem Content="Dark"/>
                                <ComboBoxItem Content="Use system setting"/>
                            </ComboBox>
                        </StackPanel>

                        <ToggleSwitch Header="Enable transparency effects"
                                    IsOn="True"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Notifications Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Notifications"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="16">
                        <ToggleSwitch Header="Enable notifications"
                                    IsOn="True"/>

                        <ToggleSwitch Header="Wellbeing reminders"
                                    IsOn="True"/>

                        <ToggleSwitch Header="Sound notifications"
                                    IsOn="False"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Wellbeing Settings -->
            <StackPanel Spacing="16">
                <TextBlock Text="Wellbeing"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="16">
                        <Slider Header="Break reminder interval (minutes)"
                               Minimum="15"
                               Maximum="120"
                               Value="60"
                               StepFrequency="15"
                               TickFrequency="15"
                               TickPlacement="BottomRight"/>

                        <Slider Header="Eye rest reminder interval (minutes)"
                               Minimum="10"
                               Maximum="60"
                               Value="20"
                               StepFrequency="10"
                               TickFrequency="10"
                               TickPlacement="BottomRight"/>

                        <Slider Header="Daily screen time goal (hours)"
                               Minimum="4"
                               Maximum="16"
                               Value="8"
                               StepFrequency="1"
                               TickFrequency="2"
                               TickPlacement="BottomRight"/>

                        <NumberBox Header="Daily water intake goal (glasses)"
                                 Value="8"
                                 Minimum="4"
                                 Maximum="15"
                                 SpinButtonPlacementMode="Inline"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- File Management Settings -->
            <StackPanel Spacing="16">
                <TextBlock Text="File Management"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="16">
                        <ToggleSwitch Header="Show file thumbnails"
                                    IsOn="True"/>

                        <ToggleSwitch Header="Auto-organize recent files"
                                    IsOn="True"/>

                        <NumberBox Header="Maximum recent files to track"
                                 Value="20"
                                 Minimum="10"
                                 Maximum="100"
                                 SpinButtonPlacementMode="Inline"/>

                        <StackPanel Spacing="8">
                            <TextBlock Text="Default view"
                                     FontSize="14"
                                     FontWeight="SemiBold"/>
                            <ComboBox SelectedIndex="0" MinWidth="200">
                                <ComboBoxItem Content="Grid view"/>
                                <ComboBoxItem Content="List view"/>
                                <ComboBoxItem Content="Detailed view"/>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Privacy & Data -->
            <StackPanel Spacing="16">
                <TextBlock Text="Privacy &amp; Data"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="16">
                        <ToggleSwitch Header="Collect usage analytics"
                                    IsOn="True"/>

                        <StackPanel Spacing="8">
                            <Button Content="Export data"
                                   HorizontalAlignment="Left">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE896;"/>
                                </Button.Icon>
                            </Button>

                            <Button Content="Clear all data"
                                   Foreground="{StaticResource ErrorBrush}"
                                   HorizontalAlignment="Left">
                                <Button.Icon>
                                    <FontIcon Glyph="&#xE74D;"/>
                                </Button.Icon>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- About Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="About"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="4">
                            <TextBlock Text="TimeLord Dashboard"
                                     FontSize="18"
                                     FontWeight="SemiBold"/>
                            <TextBlock Text="Version 1.0.0"
                                     FontSize="14"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>

                        <TextBlock Text="Your personal wellbeing and productivity hub for Windows 11"
                                 FontSize="14"
                                 TextWrapping="Wrap"
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

                        <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                            <HyperlinkButton Content="Documentation"/>
                            <HyperlinkButton Content="Report an issue"/>
                            <HyperlinkButton Content="Privacy policy"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
