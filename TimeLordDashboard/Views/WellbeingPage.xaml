<Page
    x:Class="TimeLordDashboard.Views.WellbeingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#0A0E14">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Page Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="ðŸ’š WELLBEING COMMAND CENTER"
                          FontSize="32"
                          FontFamily="Consolas"
                          FontWeight="Bold"
                          Foreground="{StaticResource CyberSuccessBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00FF41" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock Text="âš¡ MONITOR HEALTH METRICS AND PRACTICE MINDFULNESS âš¡"
                          FontSize="14"
                          FontFamily="Consolas"
                          Foreground="#8A9BA8"/>
            </StackPanel>

            <!-- Breathing Exercise Card -->
            <Border Style="{StaticResource GlowingCardStyle}"
                   Padding="24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Spacing="16">
                        <StackPanel Spacing="8">
                            <TextBlock Text="ðŸŒŠ BREATHING EXERCISE"
                                     FontSize="22"
                                     FontFamily="Consolas"
                                     FontWeight="SemiBold"
                                     Foreground="{StaticResource CyberPrimaryBrush}">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#00F0FF" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="Practice mindful breathing to reduce stress"
                                     FontSize="13"
                                     FontFamily="Consolas"
                                     Foreground="#8A9BA8"/>
                        </StackPanel>

                        <TextBlock Text="{x:Bind ViewModel.BreathingInstruction, Mode=OneWay}"
                                 FontSize="18"
                                 FontFamily="Consolas"
                                 FontWeight="SemiBold"
                                 Foreground="{StaticResource CyberAccentBrush}"/>

                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Button Content="â–¶ START"
                                   Command="{x:Bind ViewModel.StartBreathingExerciseCommand}"
                                   Style="{StaticResource CyberButtonStyle}"
                                   IsEnabled="{x:Bind ViewModel.IsBreathingExerciseActive, Mode=OneWay, Converter={StaticResource InverseBooleanConverter}}"/>
                            <Button Content="â¹ STOP"
                                   Command="{x:Bind ViewModel.StopBreathingExerciseCommand}"
                                   Style="{StaticResource CyberButtonStyle}"
                                   IsEnabled="{x:Bind ViewModel.IsBreathingExerciseActive, Mode=OneWay}"/>
                        </StackPanel>
                    </StackPanel>

                    <!-- Breathing Visual -->
                    <Viewbox Grid.Column="1"
                            Width="200"
                            Height="200"
                            Margin="24,0,0,0">
                        <Grid>
                            <Ellipse Width="160"
                                   Height="160"
                                   Fill="{StaticResource CyberAccentBrush}"
                                   Opacity="0.3">
                                <Ellipse.Effect>
                                    <DropShadowEffect Color="#9D00FF" BlurRadius="30" ShadowDepth="0" Opacity="0.8"/>
                                </Ellipse.Effect>
                            </Ellipse>
                            <TextBlock Text="{x:Bind ViewModel.BreathingCountdown, Mode=OneWay}"
                                     FontSize="72"
                                     FontFamily="Consolas"
                                     FontWeight="Bold"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Foreground="#9D00FF">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="#9D00FF" BlurRadius="15" ShadowDepth="0" Opacity="0.9"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </Grid>
                    </Viewbox>
                </Grid>
            </Border>

            <!-- Metrics Grid -->
            <TextBlock Text="ðŸ“Š YOUR METRICS"
                      FontSize="20"
                      FontFamily="Consolas"
                      FontWeight="Bold"
                      Foreground="{StaticResource CyberSecondaryBrush}">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#FF00FF" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                </TextBlock.Effect>
            </TextBlock>

            <GridView ItemsSource="{x:Bind ViewModel.Metrics, Mode=OneWay}"
                     SelectionMode="None">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                               CornerRadius="{StaticResource CardCornerRadius}"
                               Width="280"
                               Height="180"
                               Padding="20">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header -->
                                <Grid Grid.Row="0">
                                    <FontIcon Glyph="{Binding IconGlyph}"
                                            FontSize="24"
                                            Foreground="{Binding Color}"
                                            HorizontalAlignment="Left"/>
                                    <TextBlock Text="{Binding Name}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             HorizontalAlignment="Right"/>
                                </Grid>

                                <!-- Current Value -->
                                <StackPanel Grid.Row="1"
                                          VerticalAlignment="Center"
                                          Spacing="4">
                                    <TextBlock TextAlignment="Center">
                                        <Run Text="{Binding CurrentValue}"
                                             FontSize="48"
                                             FontWeight="Bold"/>
                                    </TextBlock>
                                    <TextBlock Text="{Binding Unit}"
                                             FontSize="14"
                                             TextAlignment="Center"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                </StackPanel>

                                <!-- Progress to Target -->
                                <StackPanel Grid.Row="2" Spacing="4">
                                    <TextBlock FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="Target:"/>
                                        <Run Text="{Binding TargetValue}"/>
                                        <Run Text="{Binding Unit}"/>
                                    </TextBlock>
                                    <ProgressBar Value="{Binding CurrentValue}"
                                               Maximum="{Binding TargetValue}"
                                               Foreground="{Binding Color}"
                                               Height="6"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Reminders Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Active Reminders"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.Reminders, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   CornerRadius="{StaticResource CardCornerRadius}"
                                   Padding="20"
                                   Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0"
                                            Glyph="{Binding IconGlyph}"
                                            FontSize="24"
                                            Foreground="{StaticResource AccentBrush}"
                                            Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="{Binding Title}"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Description}"
                                                 FontSize="13"
                                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                                 TextWrapping="Wrap"/>
                                        <TextBlock FontSize="12"
                                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                            <Run Text="Every"/>
                                            <Run Text="{Binding Interval.TotalMinutes}"/>
                                            <Run Text="minutes"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <ToggleSwitch Grid.Column="2"
                                                IsOn="{Binding IsEnabled, Mode=TwoWay}"
                                                OffContent=""
                                                OnContent=""/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Quick Actions -->
            <StackPanel Spacing="16">
                <TextBlock Text="Quick Actions"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                           Content="Log Water"
                           Command="{x:Bind ViewModel.UpdateHydrationCommand}"
                           Margin="0,0,12,0"
                           HorizontalAlignment="Stretch"
                           Height="80">
                        <Button.Content>
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE7B8;" FontSize="24"/>
                                <TextBlock Text="Log Water" FontSize="14"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Grid.Column="1"
                           Content="Log 5min Break"
                           Command="{x:Bind ViewModel.LogBreakCommand}"
                           CommandParameter="5"
                           Margin="0,0,12,0"
                           HorizontalAlignment="Stretch"
                           Height="80">
                        <Button.Content>
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE823;" FontSize="24"/>
                                <TextBlock Text="5min Break" FontSize="14"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Grid.Column="2"
                           Content="Log 15min Break"
                           Command="{x:Bind ViewModel.LogBreakCommand}"
                           CommandParameter="15"
                           HorizontalAlignment="Stretch"
                           Height="80">
                        <Button.Content>
                            <StackPanel Spacing="8">
                                <FontIcon Glyph="&#xE823;" FontSize="24"/>
                                <TextBlock Text="15min Break" FontSize="14"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
