<Page
    x:Class="TimeLordDashboard.Views.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:local="using:TimeLordDashboard.Controls"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <ScrollViewer>
        <StackPanel Padding="24" Spacing="24">
            <!-- Greeting Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="{x:Bind ViewModel.GreetingMessage, Mode=OneWay}"
                          FontSize="32"
                          FontWeight="SemiBold"/>
                <TextBlock Text="Welcome to your personal productivity and wellbeing hub"
                          FontSize="14"
                          Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Quick Stats -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Screen Time Card -->
                <Border Grid.Column="0" Margin="0,0,12,0"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE7F4;" FontSize="24" Foreground="{StaticResource PrimaryBrush}"/>
                        <TextBlock Text="Screen Time"
                                  FontSize="14"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock FontSize="28" FontWeight="SemiBold">
                            <Run Text="{x:Bind ViewModel.TodayScreenTime, Mode=OneWay}"/>
                            <Run Text="min" FontSize="16"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Breaks Card -->
                <Border Grid.Column="1" Margin="0,0,12,0"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE823;" FontSize="24" Foreground="{StaticResource SuccessBrush}"/>
                        <TextBlock Text="Breaks Taken"
                                  FontSize="14"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock Text="{x:Bind ViewModel.TodayBreaks, Mode=OneWay}"
                                  FontSize="28"
                                  FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <!-- Hydration Card -->
                <Border Grid.Column="2" Margin="0,0,12,0"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="8">
                        <FontIcon Glyph="&#xE7B8;" FontSize="24" Foreground="{StaticResource AccentBrush}"/>
                        <TextBlock Text="Water Intake"
                                  FontSize="14"
                                  Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        <TextBlock FontSize="28" FontWeight="SemiBold">
                            <Run Text="{x:Bind ViewModel.TodayHydration, Mode=OneWay}"/>
                            <Run Text="/ 8" FontSize="16" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </TextBlock>
                    </StackPanel>
                </Border>

                <!-- Quick Actions Card -->
                <Border Grid.Column="3"
                       Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       CornerRadius="{StaticResource CardCornerRadius}"
                       Padding="20">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Quick Actions"
                                  FontSize="14"
                                  FontWeight="SemiBold"/>
                        <Button Content="Take Break"
                               Command="{x:Bind ViewModel.QuickBreakCommand}"
                               Style="{StaticResource AccentButtonStyle}"
                               HorizontalAlignment="Stretch"/>
                        <Button Content="Log Water"
                               Command="{x:Bind ViewModel.LogWaterIntakeCommand}"
                               HorizontalAlignment="Stretch"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Productivity Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Today's Productivity"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Productivity Score Panel -->
                    <local:ProductivityScorePanel Grid.Column="0"
                                                 Summary="{x:Bind ViewModel.TodaySummary, Mode=OneWay}"
                                                 Margin="0,0,12,0"/>

                    <!-- Focus Session Panel -->
                    <local:FocusSessionPanel Grid.Column="1"
                                           Margin="0,0,12,0"/>

                    <!-- Productivity Streak & Goals -->
                    <Border Grid.Column="2"
                           Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                           CornerRadius="{StaticResource CardCornerRadius}"
                           Padding="20">
                        <StackPanel Spacing="16">
                            <TextBlock Text="Streak & Goals"
                                     FontSize="16"
                                     FontWeight="SemiBold"/>

                            <!-- Streak Info -->
                            <StackPanel Spacing="8">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <FontIcon Glyph="&#xE73E;"
                                            FontSize="24"
                                            Foreground="{StaticResource WarningBrush}"/>
                                    <TextBlock VerticalAlignment="Center">
                                        <Run Text="{x:Bind ViewModel.CurrentStreak.CurrentStreak, Mode=OneWay}"
                                             FontSize="32"
                                             FontWeight="Bold"
                                             Foreground="{StaticResource WarningBrush}"/>
                                        <Run Text=" day streak"
                                             FontSize="14"/>
                                    </TextBlock>
                                </StackPanel>
                                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="Best: "/>
                                    <Run Text="{x:Bind ViewModel.CurrentStreak.LongestStreak, Mode=OneWay}"/>
                                    <Run Text=" days"/>
                                </TextBlock>
                            </StackPanel>

                            <!-- Active Goals -->
                            <ItemsRepeater ItemsSource="{x:Bind ViewModel.ActiveGoals, Mode=OneWay}"
                                         MaxWidth="280">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Spacing="4" Margin="0,0,0,12">
                                            <TextBlock Text="{Binding Title}"
                                                     FontSize="13"
                                                     TextWrapping="Wrap"/>
                                            <ProgressBar Value="{Binding CurrentValue}"
                                                       Maximum="{Binding TargetValue}"
                                                       Foreground="{StaticResource AccentBrush}"
                                                       Height="6"/>
                                            <TextBlock FontSize="11"
                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                                <Run Text="{Binding CurrentValue}"/>
                                                <Run Text=" / "/>
                                                <Run Text="{Binding TargetValue}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding Unit}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>

            <!-- Today's Tasks -->
            <StackPanel Spacing="16">
                <Grid>
                    <TextBlock Text="Today's Tasks"
                              FontSize="20"
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"/>
                    <TextBlock HorizontalAlignment="Right"
                              VerticalAlignment="Center"
                              Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                        <Run Text="{x:Bind ViewModel.TasksCompleted, Mode=OneWay}"/>
                        <Run Text=" of "/>
                        <Run Text="{x:Bind ViewModel.TotalTasks, Mode=OneWay}"/>
                        <Run Text=" completed"/>
                    </TextBlock>
                </Grid>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.TodayTasks, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   CornerRadius="{StaticResource CardCornerRadius}"
                                   Padding="16"
                                   Margin="0,0,0,8">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox Grid.Column="0"
                                            IsChecked="{Binding Status, Converter={StaticResource TaskStatusToBoolConverter}}"
                                            Margin="0,0,12,0"/>

                                    <StackPanel Grid.Column="1" Spacing="4">
                                        <TextBlock Text="{Binding Title}"
                                                 FontSize="15"
                                                 FontWeight="SemiBold"/>
                                        <StackPanel Orientation="Horizontal" Spacing="12">
                                            <Border Background="{Binding Priority, Converter={StaticResource PriorityToColorConverter}}"
                                                   CornerRadius="4"
                                                   Padding="8,4">
                                                <TextBlock Text="{Binding Priority}"
                                                         FontSize="11"
                                                         Foreground="White"/>
                                            </Border>
                                            <TextBlock Text="{Binding Category}"
                                                     FontSize="12"
                                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <FontIcon Grid.Column="2"
                                            Glyph="&#xE8FB;"
                                            FontSize="16"
                                            Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Recent Containers Section -->
            <StackPanel Spacing="16">
                <TextBlock Text="Recent Containers"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <GridView ItemsSource="{x:Bind ViewModel.RecentContainers, Mode=OneWay}"
                         SelectionMode="None">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   CornerRadius="{StaticResource CardCornerRadius}"
                                   Width="200"
                                   Height="140"
                                   Padding="16">
                                <StackPanel Spacing="12">
                                    <FontIcon Glyph="{Binding IconGlyph}"
                                            FontSize="32"
                                            Foreground="{Binding Color}"/>
                                    <TextBlock Text="{Binding Name}"
                                             FontSize="16"
                                             FontWeight="SemiBold"
                                             TextTrimming="CharacterEllipsis"/>
                                    <TextBlock FontSize="12"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                        <Run Text="{Binding Items.Count}"/>
                                        <Run Text="items"/>
                                    </TextBlock>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>

            <!-- Wellbeing Metrics Overview -->
            <StackPanel Spacing="16">
                <TextBlock Text="Wellbeing Overview"
                          FontSize="20"
                          FontWeight="SemiBold"/>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.ActiveMetrics, Mode=OneWay}">
                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                   CornerRadius="{StaticResource CardCornerRadius}"
                                   Padding="20"
                                   Margin="0,0,0,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <FontIcon Grid.Column="0"
                                            Glyph="{Binding IconGlyph}"
                                            FontSize="24"
                                            Foreground="{Binding Color}"
                                            Margin="0,0,16,0"/>

                                    <StackPanel Grid.Column="1" Spacing="8">
                                        <TextBlock Text="{Binding Name}"
                                                 FontSize="16"
                                                 FontWeight="SemiBold"/>
                                        <ProgressBar Value="{Binding CurrentValue}"
                                                   Maximum="{Binding MaxValue}"
                                                   Foreground="{Binding Color}"
                                                   Height="8"/>
                                    </StackPanel>

                                    <TextBlock Grid.Column="2"
                                             VerticalAlignment="Center"
                                             Margin="16,0,0,0">
                                        <Run Text="{Binding CurrentValue}"
                                             FontSize="20"
                                             FontWeight="SemiBold"/>
                                        <Run Text="{Binding Unit}"
                                             FontSize="14"
                                             Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
