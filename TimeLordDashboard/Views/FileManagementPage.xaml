<Page
    x:Class="TimeLordDashboard.Views.FileManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource LayerFillColorDefaultBrush}">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Containers -->
        <Grid Grid.Column="0"
              Background="{ThemeResource LayerFillColorAltBrush}"
              Padding="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,16">
                <TextBlock Text="Containers"
                          FontSize="20"
                          FontWeight="SemiBold"/>
                <Button Content="New Container"
                       Command="{x:Bind ViewModel.CreateNewContainerCommand}"
                       HorizontalAlignment="Stretch">
                    <Button.Icon>
                        <FontIcon Glyph="&#xE710;"/>
                    </Button.Icon>
                </Button>
            </StackPanel>

            <!-- Containers List -->
            <ListView Grid.Row="1"
                     ItemsSource="{x:Bind ViewModel.Containers, Mode=OneWay}"
                     SelectedItem="{x:Bind ViewModel.SelectedContainer, Mode=TwoWay}"
                     SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Grid.Column="0"
                                    Glyph="{Binding IconGlyph}"
                                    Foreground="{Binding Color}"
                                    FontSize="20"
                                    Margin="0,0,12,0"/>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}"
                                         FontWeight="SemiBold"/>
                                <TextBlock FontSize="12"
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}">
                                    <Run Text="{Binding Items.Count}"/>
                                    <Run Text="items"/>
                                </TextBlock>
                            </StackPanel>

                            <FontIcon Grid.Column="2"
                                    Glyph="&#xE734;"
                                    FontSize="16"
                                    Foreground="{StaticResource WarningBrush}"
                                    Visibility="{Binding IsPinned}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Quick Actions -->
            <StackPanel Grid.Row="2" Spacing="8" Margin="0,16,0,0">
                <Button Content="Browse Folder"
                       Command="{x:Bind ViewModel.BrowseFolderCommand}"
                       HorizontalAlignment="Stretch">
                    <Button.Icon>
                        <FontIcon Glyph="&#xE8DA;"/>
                    </Button.Icon>
                </Button>
                <Button Content="Recent Files"
                       Command="{x:Bind ViewModel.LoadRecentFilesCommand}"
                       HorizontalAlignment="Stretch">
                    <Button.Icon>
                        <FontIcon Glyph="&#xE823;"/>
                    </Button.Icon>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Right Panel - File Browser -->
        <Grid Grid.Column="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AutoSuggestBox Grid.Column="0"
                               PlaceholderText="Search files..."
                               Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}"
                               QuerySubmitted="SearchBox_QuerySubmitted"
                               Width="400"
                               HorizontalAlignment="Left">
                    <AutoSuggestBox.QueryIcon>
                        <FontIcon Glyph="&#xE721;"/>
                    </AutoSuggestBox.QueryIcon>
                </AutoSuggestBox>

                <CommandBar Grid.Column="1"
                           Background="Transparent"
                           DefaultLabelPosition="Right">
                    <AppBarButton Icon="Sort" Label="Sort"/>
                    <AppBarButton Icon="Filter" Label="Filter"/>
                </CommandBar>
            </Grid>

            <!-- Breadcrumb -->
            <TextBlock Grid.Row="1"
                      Text="{x:Bind ViewModel.CurrentPath, Mode=OneWay}"
                      FontSize="14"
                      Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                      Margin="0,0,0,16"/>

            <!-- File List -->
            <GridView Grid.Row="2"
                     ItemsSource="{x:Bind ViewModel.CurrentItems, Mode=OneWay}"
                     SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="160" Height="160"
                              Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                              CornerRadius="{StaticResource CardCornerRadius}"
                              Padding="16"
                              DoubleTapped="FileItem_DoubleTapped">
                            <Grid.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Open"
                                                   Icon="OpenFile"/>
                                    <MenuFlyoutItem Text="Add to Favorites"
                                                   Icon="Favorite"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="Properties"
                                                   Icon="ShowResults"/>
                                </MenuFlyout>
                            </Grid.ContextFlyout>

                            <StackPanel Spacing="12" VerticalAlignment="Center">
                                <FontIcon Glyph="{Binding IconGlyph}"
                                        FontSize="48"
                                        Foreground="{StaticResource PrimaryBrush}"
                                        HorizontalAlignment="Center"/>

                                <TextBlock Text="{Binding Name}"
                                         FontSize="14"
                                         TextAlignment="Center"
                                         TextTrimming="CharacterEllipsis"
                                         MaxLines="2"/>

                                <TextBlock FontSize="11"
                                         Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                         TextAlignment="Center"
                                         Visibility="{Binding Type}">
                                    <Run Text="{Binding Size}"/>
                                    <Run Text="bytes"/>
                                </TextBlock>

                                <FontIcon Glyph="&#xE734;"
                                        FontSize="14"
                                        Foreground="{StaticResource WarningBrush}"
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding IsStarred}"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Loading Indicator -->
            <ProgressRing Grid.Row="2"
                         IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
