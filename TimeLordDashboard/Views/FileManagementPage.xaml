<Page
    x:Class="TimeLordDashboard.Views.FileManagementPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="#0A0E14">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Sidebar - Containers -->
        <Grid Grid.Column="0"
              Background="#0F1216"
              Padding="16">
            <Grid.Effect>
                <DropShadowEffect Color="#00F0FF" BlurRadius="20" ShadowDepth="0" Opacity="0.2"/>
            </Grid.Effect>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Spacing="12" Margin="0,0,0,16">
                <TextBlock Text="ðŸ“¦ CONTAINERS"
                          FontSize="18"
                          FontFamily="Consolas"
                          FontWeight="Bold"
                          Foreground="{StaticResource CyberPrimaryBrush}">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#00F0FF" BlurRadius="10" ShadowDepth="0" Opacity="0.7"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Button Content="âž• NEW CONTAINER"
                       Command="{x:Bind ViewModel.CreateNewContainerCommand}"
                       Style="{StaticResource CyberButtonStyle}"
                       HorizontalAlignment="Stretch"/>
            </StackPanel>

            <!-- Containers List -->
            <ListView Grid.Row="1"
                     ItemsSource="{x:Bind ViewModel.Containers, Mode=OneWay}"
                     SelectedItem="{x:Bind ViewModel.SelectedContainer, Mode=TwoWay}"
                     Background="Transparent"
                     SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <FontIcon Grid.Column="0"
                                    Glyph="{Binding IconGlyph}"
                                    Foreground="{Binding Color}"
                                    FontSize="20"
                                    Margin="0,0,12,0">
                                <FontIcon.Effect>
                                    <DropShadowEffect Color="#00F0FF" BlurRadius="10" ShadowDepth="0" Opacity="0.6"/>
                                </FontIcon.Effect>
                            </FontIcon>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="{Binding Name}"
                                         FontFamily="Consolas"
                                         FontWeight="SemiBold"
                                         Foreground="#00F0FF"/>
                                <TextBlock FontSize="11"
                                         FontFamily="Consolas"
                                         Foreground="#8A9BA8">
                                    <Run Text="{Binding Items.Count}"/>
                                    <Run Text=" items"/>
                                </TextBlock>
                            </StackPanel>

                            <FontIcon Grid.Column="2"
                                    Glyph="ðŸ“Œ"
                                    FontSize="14"
                                    Foreground="{StaticResource CyberWarningBrush}"
                                    Visibility="{Binding IsPinned}"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- Quick Actions -->
            <StackPanel Grid.Row="2" Spacing="8" Margin="0,16,0,0">
                <Button Content="ðŸ“ BROWSE FOLDER"
                       Command="{x:Bind ViewModel.BrowseFolderCommand}"
                       Style="{StaticResource CyberButtonStyle}"
                       HorizontalAlignment="Stretch"/>
                <Button Content="ðŸ•’ RECENT FILES"
                       Command="{x:Bind ViewModel.LoadRecentFilesCommand}"
                       Style="{StaticResource CyberButtonStyle}"
                       HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Grid>

        <!-- Right Panel - File Browser -->
        <Grid Grid.Column="1" Padding="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <Grid Grid.Row="0" Margin="0,0,0,16">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <AutoSuggestBox Grid.Column="0"
                               PlaceholderText="ðŸ” SEARCH FILES..."
                               Text="{x:Bind ViewModel.SearchQuery, Mode=TwoWay}"
                               QuerySubmitted="SearchBox_QuerySubmitted"
                               FontFamily="Consolas"
                               Foreground="#00F0FF"
                               Width="400"
                               HorizontalAlignment="Left">
                    <AutoSuggestBox.QueryIcon>
                        <FontIcon Glyph="&#xE721;" Foreground="{StaticResource CyberPrimaryBrush}"/>
                    </AutoSuggestBox.QueryIcon>
                </AutoSuggestBox>

                <CommandBar Grid.Column="1"
                           Background="Transparent"
                           DefaultLabelPosition="Right">
                    <CommandBar.Resources>
                        <Style TargetType="AppBarButton">
                            <Setter Property="Foreground" Value="{StaticResource CyberPrimaryBrush}"/>
                        </Style>
                    </CommandBar.Resources>
                    <AppBarButton Icon="Sort" Label="Sort"/>
                    <AppBarButton Icon="Filter" Label="Filter"/>
                </CommandBar>
            </Grid>

            <!-- Breadcrumb -->
            <TextBlock Grid.Row="1"
                      Text="{x:Bind ViewModel.CurrentPath, Mode=OneWay}"
                      FontSize="13"
                      FontFamily="Consolas"
                      Foreground="#8A9BA8"
                      Margin="0,0,0,16"/>

            <!-- File List -->
            <GridView Grid.Row="2"
                     ItemsSource="{x:Bind ViewModel.CurrentItems, Mode=OneWay}"
                     SelectionMode="Single">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <Border Width="160" Height="160"
                                Style="{StaticResource GlowingCardStyle}"
                                Padding="16"
                                DoubleTapped="FileItem_DoubleTapped">
                            <Border.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Open"
                                                   Icon="OpenFile"/>
                                    <MenuFlyoutItem Text="Add to Favorites"
                                                   Icon="Favorite"/>
                                    <MenuFlyoutSeparator/>
                                    <MenuFlyoutItem Text="Properties"
                                                   Icon="ShowResults"/>
                                </MenuFlyout>
                            </Border.ContextFlyout>

                            <StackPanel Spacing="12" VerticalAlignment="Center">
                                <FontIcon Glyph="{Binding IconGlyph}"
                                        FontSize="48"
                                        Foreground="{StaticResource CyberAccentBrush}"
                                        HorizontalAlignment="Center">
                                    <FontIcon.Effect>
                                        <DropShadowEffect Color="#9D00FF" BlurRadius="15" ShadowDepth="0" Opacity="0.7"/>
                                    </FontIcon.Effect>
                                </FontIcon>

                                <TextBlock Text="{Binding Name}"
                                         FontSize="13"
                                         FontFamily="Consolas"
                                         Foreground="#00F0FF"
                                         TextAlignment="Center"
                                         TextTrimming="CharacterEllipsis"
                                         MaxLines="2"/>

                                <TextBlock FontSize="10"
                                         FontFamily="Consolas"
                                         Foreground="#8A9BA8"
                                         TextAlignment="Center"
                                         Visibility="{Binding Type}">
                                    <Run Text="{Binding Size}"/>
                                    <Run Text=" bytes"/>
                                </TextBlock>

                                <FontIcon Glyph="â­"
                                        FontSize="14"
                                        Foreground="{StaticResource CyberWarningBrush}"
                                        HorizontalAlignment="Center"
                                        Visibility="{Binding IsStarred}"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>

            <!-- Loading Indicator -->
            <ProgressRing Grid.Row="2"
                         IsActive="{x:Bind ViewModel.IsLoading, Mode=OneWay}"
                         Width="60"
                         Height="60"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
