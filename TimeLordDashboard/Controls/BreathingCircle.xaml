<UserControl
    x:Class="TimeLordDashboard.Controls.BreathingCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Viewbox Width="300" Height="300">
        <Grid>
            <!-- Outer ring -->
            <Ellipse x:Name="OuterRing"
                    Width="280"
                    Height="280"
                    Stroke="{StaticResource AccentBrush}"
                    StrokeThickness="2"
                    Opacity="0.3"/>

            <!-- Middle ring -->
            <Ellipse x:Name="MiddleRing"
                    Width="220"
                    Height="220"
                    Stroke="{StaticResource AccentBrush}"
                    StrokeThickness="2"
                    Opacity="0.5"/>

            <!-- Animated breathing circle -->
            <Ellipse x:Name="BreathingEllipse"
                    Width="160"
                    Height="160"
                    Fill="{StaticResource AccentBrush}"
                    Opacity="0.6">
                <Ellipse.RenderTransform>
                    <ScaleTransform x:Name="BreathingScale" ScaleX="1" ScaleY="1"/>
                </Ellipse.RenderTransform>
            </Ellipse>

            <!-- Countdown text -->
            <TextBlock x:Name="CountdownText"
                      FontSize="72"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Center"
                      Foreground="{StaticResource AccentBrush}"/>

            <!-- Instruction text -->
            <TextBlock x:Name="InstructionText"
                      FontSize="20"
                      FontWeight="SemiBold"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Bottom"
                      Margin="0,0,0,40"
                      Foreground="{StaticResource AccentBrush}"/>
        </Grid>
    </Viewbox>
</UserControl>
