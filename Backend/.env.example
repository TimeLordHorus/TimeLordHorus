# Sanctuary Backend Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
DEBUG=True

# API Keys
SANCTUARY_API_KEY=dev_key_12345
OPENAI_API_KEY=sk-your_openai_api_key_here
REPLICATE_API_KEY=r8_your_replicate_api_key_here
MESHY_API_KEY=your_meshy_api_key_here

# Model Storage
MODEL_STORAGE_PATH=./generated_models

# Database
DATABASE_URL=sqlite:///sanctuary.db
# For PostgreSQL: postgresql://user:password@localhost/sanctuary
# For MongoDB: mongodb://localhost:27017/sanctuary

# CDN Configuration
CDN_BASE_URL=http://localhost:5000/static

# Content Moderation
ENABLE_MODERATION=True
MODERATION_THRESHOLD=0.8

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_HOUR=100
